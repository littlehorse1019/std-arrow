<?xml version="1.0"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">

  <xs:element name="mvc">
    <xs:complexType>
      <xs:sequence>
        <xs:element ref="model">
          <xs:annotation>
            <xs:documentation>
              <![CDATA[ 定义Model模块初始化配置加载的xml文件格式 ]]>
            </xs:documentation>
          </xs:annotation>
        </xs:element>
        <xs:element ref="controller">
          <xs:annotation>
            <xs:documentation>
              <![CDATA[ 定义Controller模块初始化配置加载的xml文件格式 ]]>
            </xs:documentation>
          </xs:annotation>
        </xs:element>
        <xs:element ref="view">
          <xs:annotation>
            <xs:documentation>
              <![CDATA[ 定义View模块初始化配置加载的xml文件格式 ]]>
            </xs:documentation>
          </xs:annotation>
        </xs:element>
      </xs:sequence>
    </xs:complexType>
  </xs:element>


  <xs:element name="model">
    <xs:complexType>
      <xs:sequence>
        <xs:element ref="dataSource"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

  <xs:element name="dataSource">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="user" type="xs:string"/>
        <xs:element name="password" type="xs:string"/>
        <xs:element name="driver" type="xs:string"/>
        <xs:element name="url" type="xs:string"/>
        <xs:element name="dialact" type="xs:string"/>
        <xs:element name="poolsize" type="xs:string"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

  <xs:element name="controller">
    <xs:complexType>
      <xs:sequence>
        <xs:element ref="iocs"/>
        <xs:element ref="aops"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

  <xs:element name="iocs">
    <xs:complexType>
      <xs:sequence maxOccurs="unbounded">
        <xs:element ref="bean"/>
      </xs:sequence>
    </xs:complexType>
    <!-- iocs中bean子元素的 id属性不可以重复 -->
    <xs:unique name="beanUnique">
      <xs:selector xpath=".//bean"/>
      <xs:field xpath="@id"/>
    </xs:unique>
  </xs:element>

  <xs:element name="aops">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="advisor"/>
        <xs:element name="pointcut"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

  <xs:element name="bean">
    <xs:complexType>
      <xs:sequence maxOccurs="unbounded" minOccurs="0">
        <xs:element ref="property"/>
      </xs:sequence>
      <xs:attributeGroup ref="attBean"></xs:attributeGroup>
    </xs:complexType>
    <!-- bean中property子元素的 name属性不可以重复 -->
    <xs:unique name="propUnique">
      <xs:selector xpath=".//property"/>
      <xs:field xpath="@name"/>
    </xs:unique>
  </xs:element>

  <xs:element name="property">
    <xs:complexType>
      <xs:choice maxOccurs="1" minOccurs="1">
        <xs:element name="value" type="xs:string"/>
        <xs:element name="ref">
          <xs:complexType>
            <xs:attribute name="reference" type="xs:string" use="required"/>
          </xs:complexType>
        </xs:element>
        <xs:element ref="list"/>
        <xs:element ref="map"/>
      </xs:choice>
      <xs:attributeGroup ref="attProp"></xs:attributeGroup>
    </xs:complexType>
  </xs:element>

  <!--
      bean声明property属性中 map类型，格式如下: <property name = "nameList"> <list>
      <value>something</value> <ref bean = "blog.spring.MyBean" />
      <value>otherThing</value> </list> </property>
  -->
  <xs:element name="list">
    <xs:complexType>
      <xs:sequence maxOccurs="unbounded" minOccurs="1">
        <xs:choice>
          <xs:element name="value" type="xs:string"/>
          <xs:element name="ref">
            <xs:complexType>
              <xs:attribute name="reference" type="xs:string" use="required"/>
            </xs:complexType>
          </xs:element>
        </xs:choice>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

  <!--
      bean声明property属性中 map类型，格式如下: <property name = "nameList"> <map>
      <entry key = "key1"> <value>value1</value> </entry> <entry key =
      "key2"> <ref reference = "mybean" /> </entry> </map> </property>
  -->
  <xs:element name="map">
    <xs:complexType>
      <xs:sequence maxOccurs="unbounded" minOccurs="1">
        <xs:element name="entry">
          <xs:complexType>
            <xs:choice>
              <xs:sequence maxOccurs="1" minOccurs="1">
                <xs:element name="value" type="xs:string"/>
              </xs:sequence>
              <xs:sequence maxOccurs="1" minOccurs="1">
                <xs:element name="ref">
                  <xs:complexType>
                    <xs:attribute name="reference" type="xs:string"
                      use="required"/>
                  </xs:complexType>
                </xs:element>
              </xs:sequence>
            </xs:choice>
            <xs:attribute name="key" type="xs:string" use="required"/>
          </xs:complexType>
        </xs:element>
      </xs:sequence>
    </xs:complexType>
    <!-- property的Map属性中 entry key不可以重复 -->
    <xs:unique name="entryUnique">
      <xs:selector xpath=".//entry"/>
      <xs:field xpath="@key"/>
    </xs:unique>
  </xs:element>

  <xs:attributeGroup name="attBean">
    <xs:attribute name="id" type="xs:string" use="required"></xs:attribute>
    <xs:attribute name="class" type="xs:string" use="required"></xs:attribute>
    <xs:attribute name="type">
      <xs:simpleType>
        <xs:restriction base="xs:string">
          <xs:enumeration value="singleton"/>
          <xs:enumeration value="prototype"/>
        </xs:restriction>
      </xs:simpleType>
    </xs:attribute>
    <xs:attribute name="init-method" type="xs:string"></xs:attribute>
  </xs:attributeGroup>

  <xs:attributeGroup name="attProp">
    <xs:attribute name="name" type="xs:string" use="required"></xs:attribute>
  </xs:attributeGroup>

  <xs:element name="view">
    <xs:complexType>
      <xs:sequence maxOccurs="1" minOccurs="0">
        <xs:sequence maxOccurs="1" minOccurs="0">
          <xs:element ref="accept"/>
        </xs:sequence>
        <xs:sequence maxOccurs="1" minOccurs="0">
          <xs:element ref="send"/>
        </xs:sequence>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

  <xs:element name="accept">
    <xs:complexType>
      <xs:sequence maxOccurs="1" minOccurs="0">
        <xs:sequence maxOccurs="1" minOccurs="0">
          <xs:element name="encoding" type="xs:string"/>
        </xs:sequence>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

  <xs:element name="send">
    <xs:complexType>
      <xs:sequence maxOccurs="1" minOccurs="0">
        <xs:sequence maxOccurs="1" minOccurs="0">
          <xs:element name="encoding" type="xs:string"/>
        </xs:sequence>
        <xs:sequence maxOccurs="1" minOccurs="0">
          <xs:element name="Pragma" type="xs:string"/>
        </xs:sequence>
        <xs:sequence maxOccurs="1" minOccurs="0">
          <xs:element name="Cache-Control" type="xs:string"/>
        </xs:sequence>
        <xs:sequence maxOccurs="1" minOccurs="0">
          <xs:element name="Expires" type="xs:string"/>
        </xs:sequence>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

</xs:schema> 
